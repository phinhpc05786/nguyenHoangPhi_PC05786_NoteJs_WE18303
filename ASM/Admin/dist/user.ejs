<%- include('./header-footer/header1') %>

	<!-- Sản phẩm ở đây -->
	<div class="container">
		<h2>User list</h2>
		<a href="/addUser" class="btn btn-primary m-3" data-toggle="modal" data-target="#addModal">
			ADD
		</a>
		<table class="table">
			<thead>
				<tr>
					<th>Img</th>
					<th>Name</th>
					<th>Email</th>
					<th>Phone</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% for (const user of users) { %>
					<tr>
						<td><img src="<%= user.img %>" alt="" style="max-width: 100px;"></td>
						<td>
							<%= user.name %>
						</td>
						<td>
							<%= user.email %>
						</td>
						<td>
							<%= user.phone %>
						</td>
						<td class="d-flex mr-1">
							<a href="/editUser/<%= user.id %>" method="post">
								<input type="hidden" name="id" value="<%= user.id %>">
								<button type="submit" class="btn btn-success" style="margin-top: -15px;">Edit</button>
							</a>
							<form action="/adminUser/delete/<%= user.id %>" method="post">
								<input type="hidden" name="id" value="<%= user.id %>">
								<button type="submit" class="btn btn-danger" style="margin-top: -15px;">Delete</button>
							</form>
						</td>
					</tr>
					<% } %>
			</tbody>

		</table>
	</div>
	<%- include('./header-footer/footer1') %>