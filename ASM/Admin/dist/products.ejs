<%- include('./header-footer/header1') %>

	<!-- Sản phẩm ở đây -->
	<div class="container">

		<h2>Product List</h2>
		<a href="/addProduct" class="btn btn-primary m-3" data-toggle="modal" data-target="#addModal">
			ADD
		</a>
		<table class="table">
			<thead>
				<tr>
					<th>Image</th>
					<th>Name</th>
					<th>Price</th>
					<th>Cate</th>
					<th>Description</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% for (const e of products) { %>
					<tr>
						<td><img src="../../public/data/uploads/<% e.img %>" alt=""></td>
						<td>
							<%= e.name %>
						</td>
						<td>
							<%= e.price %>
						</td>
						<td>
							<%= e.cate%>
						</td>
						<td>
							<%= e.description%>
						</td>
						<td class="d-flex mr-1">
								<a href="/editPro/<%= e.id %>" type="submit" class="btn btn-success" style="margin-top: -15px;">Edit</a>
							<form action="/adminShop/delete/<%= e.id %>" method="post">
								<input type="hidden" name="id" value="<%= e.id %>">
								<button type="submit" class="btn btn-danger" style="margin-top: -15px;">Delete</button>
							</form>
						</td>
					</tr>
					<% } %>
			</tbody>
		</table>
	</div>
	<%- include('./header-footer/footer1') %>