<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="/">Logo</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link active" href="/">Trang chủ</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" id="productDropdownToggle" href="#">Sản phẩm</a>
          <div class="dropdown-menu" id="productDropdown" aria-labelledby="productDropdownToggle"> <!-- Thêm id cho menu con -->
            <% for(let cate of categories){ %>
              <a class="dropdown-item" href="/shop/<%= cate.id %>"></a>
            <% } %>
          </div>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/addnew">Thêm sản phẩm</a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const productDropdownToggle = document.getElementById("productDropdownToggle");
  const productDropdown = document.getElementById("productDropdown");
  
  // Thêm sự kiện click cho mục "Sản phẩm"
  productDropdownToggle.addEventListener("click", function() {
    // Kiểm tra nếu menu con đã hiển thị, thì ẩn nó đi, và ngược lại
    if (productDropdown.classList.contains("show")) {
      productDropdown.classList.remove("show");
    } else {
      productDropdown.classList.add("show");
    }
  });
});
</script>
